<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">


        <TextView
            android:id="@+id/textHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вызов такси"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/editStartPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Откуда"/>

        <EditText
            android:id="@+id/editEndPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Куда"/>

        <EditText
            android:id="@+id/editDepartureTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Время отправления"/>

        <EditText
            android:id="@+id/editArriveTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Время прибытия"/>

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Цена"/>

        <EditText
            android:id="@+id/editDistanse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Расстояние"/>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ОК"/>

        <TextView
            android:id="@+id/textUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Разработал Хомич В.Г. АС-64"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
